# Tally Dashboard Server Configuration

# Server
PORT=3000
HOST=0.0.0.0

# Tally Prime Connection
TALLY_HOST=192.168.1.100
TALLY_PORT=9000
TALLY_COMPANY=Your Company Name

# Sync interval in milliseconds (5000 = 5 seconds)
SYNC_INTERVAL=5000

# Database
DB_PATH=./data/dashboard.db

# Firebase (for mobile notifications - optional)
# FIREBASE_PROJECT_ID=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_CLIENT_EMAIL=

# Fonepay Integration (optional)
# Login credentials for Fonepay merchant portal
FONEPAY_USERNAME=your_fonepay_username
FONEPAY_PASSWORD=your_fonepay_password
# Sync interval in milliseconds (3600000 = 1 hour)
FONEPAY_INTERVAL_MS=3600000
# Run browser in headless mode (true/false)
FONEPAY_HEADLESS=true
